<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tarefa_objetivos_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projeto.anotacoes.classes.ui.activity.TarefaObjetivos">

    <TextView
        android:id="@+id/lista_tarefa_grade_opcoes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eeeeee"
        android:fontFamily="@font/zeyada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />
    <ImageButton
        android:id="@+id/lista_notas_btn_notas"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintBottom_toBottomOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintTop_toTopOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintEnd_toEndOf="@id/lista_tarefa_grade_opcoes"
        android:src="@drawable/icon_post_it"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.40"
        />
    <ImageButton
        android:id="@+id/lista_notas_btn_tarefas"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintBottom_toBottomOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintTop_toTopOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintEnd_toEndOf="@id/lista_tarefa_grade_opcoes"
        android:src="@drawable/icon_to_do"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.60"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_notas_lista_tarefas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_tarefa" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tarefa_objetivos_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_margin="16dp"
            android:src="@drawable/ic_baseline_add_24"
            />
</androidx.constraintlayout.widget.ConstraintLayout>