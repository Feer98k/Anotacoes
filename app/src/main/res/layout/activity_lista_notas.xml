<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lista_tarefa_grade_opcoes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eeeeee"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        />
    <ImageButton
        android:id="@+id/lista_notas_btn_notas"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintBottom_toBottomOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintTop_toTopOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintEnd_toEndOf="@id/lista_tarefa_grade_opcoes"
        android:src="@drawable/icon_post_it"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.40"
        />
    <ImageButton
        android:id="@+id/lista_notas_btn_tarefas"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintBottom_toBottomOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintTop_toTopOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintEnd_toEndOf="@id/lista_tarefa_grade_opcoes"
        android:src="@drawable/icon_to_do"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.60"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_notas_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/lista_tarefa_grade_opcoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:listitem="@layout/item_nota" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/lista_notas_fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu_colorNormal="#367C25"
        app:menu_colorPressed="#266817"
        app:menu_colorRipple="#195b09"


        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/lista_notas_fab_menu_nova_tarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_baseline_add_24"
            app:fab_size="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:fab_label="Adicionar Tarefa"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/lista_notas_fab_menu_nova_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_baseline_add_24"
            app:fab_size="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:fab_label="Adicionar Nota"
            app:fab_colorNormal="#607890"
            app:fab_colorPressed="#2945fc"
            app:fab_colorRipple="#3216e2"
            />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>