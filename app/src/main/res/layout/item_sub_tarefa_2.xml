<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_subTarefa_textView_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Sub - tarefa"
        android:textSize="18sp"
        android:maxLines="2"
        android:maxLength="52"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_subTarefa_checkBox"
        app:layout_constraintBottom_toBottomOf="@id/item_subTarefa_checkBox"
        android:padding="10dp"
        android:focusable="false"
        />
    <CheckBox
        android:id="@+id/item_subTarefa_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="false"
        android:clickable="false"
        />
</androidx.constraintlayout.widget.ConstraintLayout>